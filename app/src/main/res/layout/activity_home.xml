<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical"
              android:padding="16dp"
              tools:context=".activity.HomeActivity">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCondition"
             android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_below="@id/ivCondition"
            android:src="@drawable/splash"/>

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/today"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDay"
            android:text="@string/date"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tvCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tvDate"
            android:text="@string/city_name"
            android:textColor="#FFFFFF"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCityName"
            android:text="28"
            android:textColor="#FFFFFF"
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/tvDegree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTemperature"
            android:layout_toRightOf="@+id/tvTemperature"
            android:text="@string/degree"
            android:textColor="#FFFFFF"
            android:textSize="60sp"/>

        <TextView
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivCondition"
            android:layout_alignRight="@id/ivCondition"
            android:layout_below="@id/ivCondition"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/condition"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutFooter"
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDayOneDate"
                android:text="28/08/2016"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvDayOneTemp"
                android:text="28 째C"
                android:textColor="#000000"
                android:textSize="23sp"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivDayOneCond"
                android:layout_weight="2"
                android:src="@drawable/i01d"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDayTwoDate"
                android:text="29/08/2016"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvDayTwoTemp"
                android:text="27 째C"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivDayTwoCond"
                android:layout_weight="2"
                android:src="@drawable/i02d"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDayThreeDate"
                android:text="30/08/2016"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvDayThreeTemp"
                android:text="27 째C"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivDayThreeCond"
                android:layout_weight="2"
                android:src="@drawable/i03d"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDayFourDate"
                android:text="31/08/2016"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tvDayFourTemp"
                android:text="25 째C"
                android:textSize="23sp"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/ivDayFourCond"
                android:layout_weight="2"
                android:src="@drawable/i10d"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
